<% content_for(:title, "Home | To Do") %>

<h1>Lists</h1>

<ul>
  <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %></li>
  <% end %>
</ul>

<%= link_to "Add list", new_list_path, :class=> "btn btn-default" %>

<%= pie_chart Task.group(:list_id).count %>

<%= line_chart Task.group_by_day(:created_at).count %>
